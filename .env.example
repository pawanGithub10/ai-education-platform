# AI Education Platform - Environment Configuration Template
# Copy this file to .env and update with your actual values

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_URL=postgresql://ai_education_user:your_password@localhost:5432/ai_education_dev
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/ai_education_content

# Test Database (optional)
TEST_DATABASE_URL=postgresql://ai_education_user:your_password@localhost:5432/ai_education_test

# ================================
# JWT AUTHENTICATION
# ================================
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-characters
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-min-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ================================
# AI PROVIDER API KEYS
# ================================
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-organization-id
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Anthropic Claude Configuration  
CLAUDE_API_KEY=your-claude-api-key
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=2000

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro
GEMINI_MAX_TOKENS=2000

# ================================
# SERVICE CONFIGURATION
# ================================
NODE_ENV=development
LOG_LEVEL=info
PORT=3000

# Service URLs (for microservices communication)
AUTH_SERVICE_URL=http://localhost:3001
AI_ORCHESTRATION_SERVICE_URL=http://localhost:3002
CONTENT_GENERATION_SERVICE_URL=http://localhost:3003
ASSESSMENT_SERVICE_URL=http://localhost:3004
COMMUNICATION_SERVICE_URL=http://localhost:3005
STUDENT_TOOLS_SERVICE_URL=http://localhost:3006
ANALYTICS_SERVICE_URL=http://localhost:3007
INTEGRATION_SERVICE_URL=http://localhost:3008

# ================================
# EMAIL CONFIGURATION
# ================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM_NAME=AI Education Platform
SMTP_FROM_EMAIL=noreply@ai-education.com

# ================================
# FILE STORAGE CONFIGURATION
# ================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=ai-education-platform-storage

# Local file storage (alternative to AWS)
LOCAL_STORAGE_PATH=./storage
MAX_FILE_SIZE=10MB

# ================================
# EXTERNAL INTEGRATIONS
# ================================
# Google Workspace Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Microsoft Teams Integration
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# ================================
# SECURITY CONFIGURATION
# ================================
# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_COOKIE_MAX_AGE=86400000

# ================================
# MONITORING & OBSERVABILITY
# ================================
# Logging
LOG_FORMAT=json
LOG_FILE_PATH=./logs/app.log
LOG_MAX_FILES=30
LOG_MAX_SIZE=10m

# Metrics and Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_ENABLED=true
METRICS_ENDPOINT=/metrics

# Distributed Tracing
JAEGER_ENDPOINT=http://localhost:14268/api/traces
TRACING_ENABLED=true
TRACING_SAMPLE_RATE=0.1

# ================================
# FEATURE FLAGS
# ================================
# AI Features
AI_CONTENT_GENERATION_ENABLED=true
AI_ASSESSMENT_CREATION_ENABLED=true
AI_CHAT_ENABLED=true
AI_CONTENT_MODERATION_ENABLED=true

# Student Features
STUDENT_CHATBOTS_ENABLED=true
STUDENT_PROGRESS_TRACKING_ENABLED=true
PARENTAL_CONTROLS_ENABLED=true

# Integration Features
LMS_INTEGRATION_ENABLED=true
SSO_ENABLED=true
MOBILE_APP_ENABLED=false

# ================================
# INDIAN EDUCATION SPECIFIC
# ================================
# Default Curriculum Settings
DEFAULT_CURRICULUM=CBSE
DEFAULT_LANGUAGE=ENGLISH
SUPPORTED_LANGUAGES=ENGLISH,HINDI,BENGALI,TAMIL,TELUGU,MARATHI,GUJARATI,KANNADA

# Regional Settings
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR
ACADEMIC_YEAR_START_MONTH=4

# Content Moderation
CONTENT_MODERATION_STRICT_MODE=true
CULTURAL_SENSITIVITY_ENABLED=true
REGIONAL_CONTENT_ADAPTATION=true

# ================================
# DEVELOPMENT SETTINGS
# ================================
# Development Tools
DEBUG_MODE=true
HOT_RELOAD_ENABLED=true
API_DOCUMENTATION_ENABLED=true
SWAGGER_UI_ENABLED=true

# Testing
SKIP_EMAIL_VERIFICATION=true
MOCK_AI_RESPONSES=false
SEED_DATABASE=true

# ================================
# PRODUCTION OVERRIDES
# ================================
# (These will be overridden in production environment)
# SECURE_COOKIES=true
# HTTPS_ONLY=true
# TRUST_PROXY=true
# LOG_LEVEL=warn