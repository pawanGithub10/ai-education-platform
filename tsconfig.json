{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "paths": {
      "@shared/common/*": ["shared/common/src/*"],
      "@shared/database/*": ["shared/database/src/*"],
      "@shared/security/*": ["shared/security/src/*"],
      "@shared/monitoring/*": ["shared/monitoring/src/*"],
      "@services/auth/*": ["services/authentication-service/src/*"],
      "@services/ai/*": ["services/ai-orchestration-service/src/*"],
      "@services/content/*": ["services/content-generation-service/src/*"]
    }
  },
  "include": [
    "shared/**/*",
    "services/**/*",
    "clients/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}